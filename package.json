{
  "private": true,
  "name": "helloworld",
  "main": "src/index.ts",
  "description": "A template with my own preferences for Expo projects",
  "version": "0.0.1",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "lint": "eslint . --ext js,ts,tsx"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.0",
    "@react-navigation/native": "^6.0.2",
    "expo": "^50.0.2",
    "expo-font": "~11.10.0",
    "expo-linking": "~6.2.1",
    "expo-router": "~3.4.0",
    "expo-splash-screen": "~0.26.0",
    "expo-status-bar": "~1.11.0",
    "expo-system-ui": "~2.9.1",
    "expo-web-browser": "~12.8.0",
    "nativewind": "^4.0.23",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.73.2",
    "react-native-reanimated": "~3.6.0",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-web": "~0.19.6"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@testing-library/react-native": "^12.4.3",
    "@types/react": "~18.2.45",
    "eslint": "^8.56.0",
    "eslint-config-universe": "^12.0.0",
    "jest": "^29.2.1",
    "jest-expo": "~50.0.1",
    "prettier": "^3.2.4",
    "react-test-renderer": "18.2.0",
    "tailwindcss": "3.3.2",
    "typescript": "^5.1.3"
  },
  "eslintConfig": {
    "extends": "universe/native",
    "ignorePatterns": [
      "node_modules",
      "expo-env.d.ts"
    ],
    "overrides": [
      {
        "extends": "universe/node",
        "files": ["*.config.js"]
      },
      {
        "extends": "universe/web",
        "files": ["src/**/*.web.{js,ts,tsx}"]
      }
    ]
  },
  "jest": {
    "preset": "jest-expo"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "bracketSameLine": true
  }
}
